<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/api/greeting</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>example-admin</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>KEYCLOAK</auth-method>
  </login-config>

  <security-role>
    <role-name>example-admin</role-name>
  </security-role>
</web-app>
